  <body>
     <%- include('./partials/_header') %>

    <!--  I hardcoded the mugs info to have an ideia of what the layout looks like. Please replace it with dynamic info (and if something goes wrong when showing more than one product, please let me know) -->

    <!-- <h1><% for (let favourite of favourites){ %>
      <%= favourite.mug_id %>

    <% } %> -->
    <!-- </h1> -->
  <section class="favourites">
    <h1 class="favourites__title"> My favourites</h1>
    <% for (let favourite of favourites){ %>
    <div class="favourites__container">
    <img class="favourites__image" src="<%= favourite.image%>" alt="">
    <div class="favourites__name-icon">
      <span class="favourites__price"><%= favourite.price%></span>
      <div class="favourites__name-container">
        <h3 class="favourites__name"><%= favourite.name%></h3>
      </div>


      <div class="favourites__favourite">
        <img class="favourites__fav-icon" src="../icons/favourite.svg" alt="Favourite">
      </div>
    </div>
   <% } %>
  </section>

    <%- include('./partials/_footer') %>
  </body>
